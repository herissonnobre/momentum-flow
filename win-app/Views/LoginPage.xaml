<Page x:Class="win_app.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:win_app.Views"
      mc:Ignorable="d"
      Title="Login" Height="1080" Width="1440">
    <Grid>
        <TextBox x:Name="EmailTextBox" Width="300" Height="30" VerticalAlignment="Top" Margin="50,50,50,0" />
        <PasswordBox x:Name="PasswordBox" Width="300" Height="30" VerticalAlignment="Top" Margin="50,100,50,0"/>
        <Button Content="Login" Width="100" Height="30" VerticalAlignment="Top" Margin="150,150,150,0" Click="LoginButton_Click"/>
    </Grid>
</Page>
